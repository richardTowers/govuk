{
    "include": ["src/**/*"],
    "compilerOptions": {
      "strict": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react",
      "moduleResolution": "nodenext",
      "module": "ES2022",
      "outDir": "dist"
    },
    "ts-node": {
      "esm": true
    }
  }